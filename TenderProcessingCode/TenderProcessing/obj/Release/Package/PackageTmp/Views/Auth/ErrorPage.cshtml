@using TenderProcessingDataAccessLayer.Models

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Ошибка</title>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script type="text/javascript">
    var message = "@Html.Raw(ViewBag.Message)";

    $(init);

    function init() {
        $("#errorMessage").text(message);
    }

    </script>
</head>
<body>
    <div>
        <h2 style="text-align: center;">Ошибка</h2>
        <div style="width: 80%; margin: 10%; text-align: center;" id="errorMessage"></div> 
    </div>
</body>
</html>
